<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp">

        <ImageView
            android:id="@+id/expertImgView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/rlName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/expertImgView"
            app:layout_constraintTop_toTopOf="@id/expertImgView">

            <TextView
                android:id="@+id/expertNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_4sdp"
                android:ellipsize="end"
                android:includeFontPadding="true"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvBio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_4sdp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/rlName"
            app:layout_constraintTop_toBottomOf="@id/rlName" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/videoThumbnailImg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/tvBio" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/likeImageView"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/_4sdp"
            android:paddingTop="@dimen/_14sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingBottom="@dimen/_14sdp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/itemComments"
            app:layout_constraintTop_toBottomOf="@id/videoThumbnailImg" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/itemComments"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/_4sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingBottom="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="@id/likeImageView"
            app:layout_constraintLeft_toRightOf="@+id/likeImageView"
            app:layout_constraintRight_toLeftOf="@+id/shareImageView"
            app:layout_constraintTop_toTopOf="@id/likeImageView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shareImageView"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/_4sdp"
            android:paddingTop="@dimen/_14sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingBottom="@dimen/_14sdp"
            app:layout_constraintLeft_toRightOf="@+id/itemComments"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/videoThumbnailImg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:alpha="0.3"
            app:layout_constraintTop_toBottomOf="@+id/shareImageView" />

        <TextView
            android:id="@+id/tvLikeCount"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10sdp"
            app:autoSizeMaxTextSize="@dimen/_10sdp"
            app:autoSizeMinTextSize="@dimen/_6sdp"
            app:autoSizeStepGranularity="@dimen/_2sdp"
            app:autoSizeTextType="uniform"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvViewCount"
            app:layout_constraintTop_toBottomOf="@id/shareImageView" />

        <TextView
            android:id="@+id/tvViewCount"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:drawablePadding="@dimen/_3sdp"
            android:gravity="center_vertical|end"
            android:includeFontPadding="false"
            android:paddingEnd="@dimen/_4sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_11sdp"
            android:visibility="invisible"
            app:autoSizeMaxTextSize="@dimen/_11sdp"
            app:autoSizeMinTextSize="@dimen/_6sdp"
            app:autoSizeStepGranularity="@dimen/_2sdp"
            app:autoSizeTextType="uniform"
            app:layout_constraintLeft_toRightOf="@+id/tvLikeCount"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shareImageView" />

        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/tvViewCount" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingBottom="@dimen/_8sdp"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvItemTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>